{
  "entities": {
    "contact": {
      "title": "Contact",
      "description": "A person who is a business contact.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the contact."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email address of the contact."
        },
        "phone": {
          "type": "string",
          "description": "The phone number of the contact."
        },
        "companyId": {
          "$ref": "#/backend/entities/company"
        }
      },
      "required": ["name", "email"]
    },
    "deal": {
      "title": "Deal",
      "description": "A business deal or opportunity.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the deal."
        },
        "amount": {
          "type": "number",
          "description": "The value of the deal."
        },
        "stage": {
          "type": "string",
          "enum": ["lead", "contacted", "proposal", "negotiation", "won", "lost"],
          "description": "The current stage of the deal."
        },
        "contactId": {
          "$ref": "#/backend/entities/contact"
        },
        "companyId": {
          "$ref": "#/backend/entities/company"
        }
      },
      "required": ["name", "stage", "contactId"]
    },
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      },
      "required": ["displayName", "email"]
    },
    "company": {
      "title": "Company",
      "description": "A business or organization.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the company."
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "The company's website."
        }
      },
      "required": ["name"]
    },
    "crystal": {
      "title": "Crystal",
      "description": "An atomized fact or piece of information extracted from an unstructured source.",
      "type": "object",
      "properties": {
        "fact": {
          "type": "string",
          "description": "The atomized statement of fact."
        },
        "source": {
          "type": "string",
          "description": "The origin of the information (e.g., 'email', 'voice note', 'manual')."
        },
        "sourceIdentifier": {
          "type": "string",
          "description": "A reference to the specific source item (e.g., email subject or voice note ID)."
        },
        "status": {
          "type": "string",
          "enum": ["active", "overwritten"],
          "description": "The current status of the crystal."
        },
        "overwrittenBy": {
          "type": "string",
          "description": "The ID of the crystal that overwrites this one, if applicable."
        },
        "contactId": {
          "$ref": "#/backend/entities/contact"
        },
        "dealId": {
          "$ref": "#/backend/entities/deal"
        },
        "companyId": {
          "$ref": "#/backend/entities/company"
        },
        "createdBy": {
          "$ref": "#/backend/entities/userProfile"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the crystal was created."
        }
      },
      "required": ["fact", "source", "status", "createdAt"]
    },
    "audit_log": {
        "title": "Audit Log",
        "description": "A record of a change made to an entity in the database.",
        "type": "object",
        "properties": {
          "ts": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp of the logged action."
          },
          "actor_type": {
            "type": "string",
            "enum": ["user", "system_ai", "system_job"],
            "description": "The type of actor that performed the action."
          },
          "actor_id": {
            "type": "string",
            "description": "The ID of the actor (e.g., user UID)."
          },
          "action": {
            "type": "string",
            "enum": ["create", "update", "delete", "restore"],
            "description": "The CRUD action performed."
          },
          "entity_type": {
            "type": "string",
            "description": "The type of entity that was changed (e.g., 'company', 'contact')."
          },
          "entity_id": {
            "type": "string",
            "description": "The ID of the document that was changed."
          },
          "table": {
            "type": "string",
            "description": "The UI-friendly name of the table/collection (e.g., 'companies')."
          },
          "source": {
            "type": "string",
            "enum": ["voice", "email", "meeting", "ui", "import", "api"],
            "description": "The source of the change."
          },
          "before_snapshot": {
            "type": "object",
            "description": "A snapshot of the entity's data before the change."
          },
          "after_snapshot": {
            "type": "object",
            "description": "A snapshot of the entity's data after the change."
          }
        },
        "required": ["ts", "actor_type", "action", "entity_type", "entity_id", "table", "source"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/userProfile"
      },
      "description": "Stores user profile information."
    },
    "/contacts/{contactId}": {
      "schema": {
        "$ref": "#/backend/entities/contact"
      },
      "description": "Stores individual contact information."
    },
    "/deals/{dealId}": {
      "schema": {
        "$ref": "#/backend/entities/deal"
      },
      "description": "Stores deal and opportunity information."
    },
    "/companies/{companyId}": {
      "schema": {
        "$ref": "#/backend/entities/company"
      },
      "description": "Stores company information."
    },
    "/crystals/{crystalId}": {
      "schema": {
        "$ref": "#/backend/entities/crystal"
      },
      "description": "Stores atomized facts (crystals) extracted from various sources."
    },
    "/audit_logs/{logId}": {
      "schema": {
        "$ref": "#/backend/entities/audit_log"
      },
      "description": "Stores a log of all changes made to database entities for auditing purposes."
    }
  }
}
